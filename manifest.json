{
  "manifest_version" : 2, 
  "name": "Jugevents",
  "version": "1.0",
  "description": "Gestion des inscrits dans un evenement de JUG",
  "browser_action": {
	"default_icon": "logo.jpeg",
    "default_title": "JugEvents",
	"default_popup": "popup.html"
  },
  "icons": {
	"128" : "logo.jpeg"
  },
  "background": {
	"persistent": false,
	"scripts":["background.js"]
  },
  "options_page": "options.html",
  "permissions": ["tabs", "http://*.jugevents.org/*", "notifications"],
  "web_accessible_resources": [
    "logo.jpeg"
  ]
}